<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.led.led.ledControl">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/led_control" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/on"
        android:id="@+id/button2"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/off"
        android:id="@+id/button3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
//Voltage
    <TextView
        android:id="@+id/battery"
        android:text="Percentage: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:id="@+id/percent"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="170dp"/>

//Health
    <TextView
        android:id="@+id/batteryhealth"
        android:text="Health: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:id="@+id/health"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="170dp"/>

//Charging Source
    <TextView
        android:id="@+id/batterychargesource"
        android:text="Charge Source: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/source"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="170dp"/>

//Temperature
    <TextView
        android:id="@+id/temp"
        android:text="Temperature: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:id="@+id/temperature"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="170dp"/>

//Charging Staus
    <TextView
        android:id="@+id/chargestatus"
        android:text="Charge Status: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="310dp"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/status"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="310dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="170dp"/>

//voltage
    <TextView
        android:id="@+id/batteryLevel"
        android:text="Voltage: "
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical|right"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:id="@+id/voltage"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="170dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
